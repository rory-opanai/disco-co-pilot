# Copy to .env.local or .env

# Required
OPENAI_API_KEY=
DATABASE_URL=
# For local Postgres without SSL, set PGSSL=disable
PGSSL=disable

# Optional security for API routes (if set, clients must send X-Auth-Token)
APP_TOKEN=

# Models (override as needed)
REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
RESPONSES_MODEL=gpt-4o-mini
TRANSCRIBE_MODEL=gpt-4o-mini-transcribe
EMBEDDING_MODEL=text-embedding-3-small

# Next.js public config (optional)
NEXT_PUBLIC_REALTIME_MODEL=gpt-4o-realtime-preview-2024-12-17
